<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Nuevo Rostro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <EditText
        android:id="@+id/editTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la persona"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnStartCapture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR CAPTURA"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#2196F3"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consejos:\n• Usa buena iluminación\n• Mira directamente a la cámara\n• Captura desde diferentes ángulos"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="32dp" />

</LinearLayout>